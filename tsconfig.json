{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./dist"
    },
    "filesGlob": [
        "./lib/**/*.ts",
        "./typings/**/*.ts",
        "!./node_modules/**/*"
    ],
    "files": [
        "lib/index.ts",
        "lib/KeyValueIterable.ts",
        "lib/Static.ts",
        "lib/SuperIterable.ts",
        "typings/assertion-error/assertion-error.d.ts",
        "typings/chai/chai.d.ts",
        "typings/mocha/mocha.d.ts",
        "typings/tsd.d.ts"
    ],
    "exclude": [],
    "compileOnSave": false
}
